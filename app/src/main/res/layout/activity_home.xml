<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="?android:attr/listPreferredItemPaddingStart"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/tv_persistence_practice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="24dp"
        android:fontFamily="@font/inter_semibold"
        android:text="@string/persistence_practice_text"
        android:textAlignment="center"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_internal_storage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/internal_storage_text" />

    <Button
        android:id="@+id/btn_external_storage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/external_storage_text" />

</LinearLayout>